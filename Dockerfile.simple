FROM node:18-alpine

# 设置工作目录
WORKDIR /app

# 复制package文件
COPY package*.json yarn.lock ./

# 安装依赖
RUN npm install -g yarn && yarn install --production

# 复制源代码
COPY . .

# 创建必要目录
RUN mkdir -p uploads

# 设置环境变量
ENV NODE_ENV=production
ENV PORT=3001

# 暴露端口
EXPOSE 3001

# 启动应用
CMD ["node", "server.js"]
